{%- liquid
  comment
    Translations
  endcomment

  assign search_t = 'general.search.search' | t
  assign cart_title_t = 'cart.title' | t

  comment
    Variables
  endcomment

  assign bg_color = section.settings.background-color
  assign menu = section.settings.menu
  assign light_text = section.settings.light-text
  assign logo = section.settings.logo
  assign logo_height = section.settings.logo-height
  assign mobile_logo_height = section.settings.mobile-logo-height
  assign popup_enabled = settings.popup--enabled
  assign show_search = settings.search--show-in-header
  assign cart_type = settings.cart--type

  render 'section-assets', name: 'header', type: 'script'
-%}

<header-root
  class="header--root"
  data-section-id="{{ section.id }}"
  data-section-type="header"
  data-background-color="{{ bg_color }}"
  data-light-text="{{ light_text }}"
  {% if logo and logo_height <= 45 %}
    data-header-logo-type="inline"
  {% elsif logo %}
    data-header-logo-type="overflowing"
  {% endif %}
  {% if logo and mobile_logo_height <= 40 %}
    data-header-mobile-logo-type="inline"
  {% elsif logo %}
    data-header-mobile-logo-type="overflowing"
  {% endif %}
>
  <noscript>
    <div class="header--container">
      <div class="header--left-side">
        {% if request.page_type == 'index' %}
          <h1 class="header--logo">
            {%
              render 'logo',
              logo: logo,
              height: logo_height,
              mobile_height: mobile_logo_height
            %}
          </h1>
        {% else %}
          <div class="header--logo">
            {%
              render 'logo',
              logo: logo,
              height: logo_height,
              mobile_height: mobile_logo_height
            %}
          </div>
        {% endif %}

        {%
          render 'x-menu',
          overlap_parent: 1,
          off_canvas: 'right-sidebar',
          handle: menu,
          noscript: true
        %}
      </div>
      <div class="header--right-side" data-item="nav-text">
        {% if show_search %}
          <div class="header--search">
            <a href="{{ routes.search_url }}">{{ search_t }}</a>
          </div>
        {% endif %}

        {% render 'login' %}

        <div class="cart-link" data-item="nav-text">
          <a href="{{ routes.cart_url }}">{{ cart_title_t }}</a>
        </div>
      </div>
    </div>
  </noscript>

  <div class="header--y-menu-for-off-canvas" style="display:none;">
    {% render 'y-menu', handle: menu %}
  </div>

  <div class="header--container">
    <div class="header--left-side">
      {% if request.page_type == 'index' %}
        <h1 class="header--logo">
          {%
            render 'logo',
            logo: logo,
            height: logo_height,
            mobile_height: mobile_logo_height
          %}
        </h1>
      {% else %}
        <div class="header--logo">
          {%
            render 'logo',
            logo: logo,
            height: logo_height,
            mobile_height: mobile_logo_height
          %}
        </div>
      {% endif %}
      {%
        render 'x-menu',
        overlap_parent: 1,
        off_canvas: 'right-sidebar',
        handle: menu
      %}
    </div>

    <div class="header--right-side" data-item="nav-text">
      {% if show_search %}
        <div class="header--search">
          <a href="{{ routes.search_url }}">{{ search_t }}</a>
        </div>
      {% endif %}

      {%- liquid
        render 'login'

        if popup_enabled
          render 'popup', component: 'link'
        endif
      -%}

      <div class="cart-link">
        <a
          {% if cart_type == 'drawer' %}
            data-off-canvas--open="right-sidebar"
            data-off-canvas--view="cart"
            aria-haspopup="menu"
            href="#"
          {% else %}
            href="{{ routes.cart_url }}"
          {% endif %}
        >
          {{ cart_title_t }}&nbsp;
          <span class="cart--external--icon" data-item-count="{{ cart.item_count }}">
          (<span class="cart--external--total-items">{{ cart.item_count }}</span>)
          </span>
        </a>
      </div>

      <a
        class="header--cart-count"
        data-item="nav-text"
        {% if cart_type == 'drawer' %}
          data-off-canvas--open="right-sidebar"
          data-off-canvas--view="cart"
          aria-haspopup="menu"
          href="#"
        {% else %}
          href="{{ routes.cart_url }}"
        {% endif %}
      >
        <span class="cart--external--total-items">
          {{ cart.item_count }}
        </span>
      </a>

      <div
        tabindex="0"
        data-off-canvas--open="left-sidebar"
        aria-haspopup="menu"
      >
        {% render 'icons', icon: 'menu' %}
      </div>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "tag": "header",
  "settings": [
    {
      "id": "background-color",
      "label": "Background color",
      "type": "select",
      "options": [
        { "label": "None", "value": "none" },
        { "label": "Light", "value": "light" },
        { "label": "Dark", "value": "dark" },
        { "label": "Accent 1", "value": "accent-1" },
        { "label": "Accent 2", "value": "accent-2" }
      ],
      "default": "none"
    },
    {
      "id": "light-text",
      "label": "Use light text color",
      "type": "checkbox",
      "default": false
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "label": "Custom logo height",
      "id": "logo-height",
      "type": "range",
      "min": 15,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 35,
      "info": "This is referring to the natural height and should be half the height of the image you uploaded to ensure it stays sharp on retina screens."
    },
    {
      "label": "Mobile logo height",
      "id": "mobile-logo-height",
      "type": "range",
      "min": 15,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 30
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}