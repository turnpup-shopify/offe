{%- liquid
  assign bg_color = section.settings.background-color
  assign container_width = section.settings.container-width
  assign heading = section.settings.heading
  assign text_color = section.settings.text-color
  assign spacing_above = section.settings.spacing-above
  assign spacing_below = section.settings.spacing-below
  assign title_alignment = section.settings.title-alignment
-%}

{%- if section.blocks.size > 0 -%}
  {%- render 'section-assets', name: 'collapsible-row' -%}

  <div
    class="collapsible-rows--root"
    data-section-id="{{ section.id }}"
    style="background-color: {{ bg_color }}; color: {{text_color }};"
    data-container-width="{{ container_width }}"
    data-spacing-above="{{ spacing_above }}"
    data-spacing-below="{{ spacing_below }}"
    data-title-alignment="{{ title_alignment }}"
  >
    <div class="collapsible-rows--wrapper">
      {%- if heading != blank -%}
        <div class="collapsible-rows--header">
          <h2 data-item="section-heading">
            {{- heading | escape -}}
          </h2>
        </div>
      {%- endif -%}

      {%- for block in section.blocks -%}
        {%- assign unique_id = section.id | append: '--collapsible-row--' | append: forloop.index -%}
        <div
          class="collapsible-rows--block"
          data-fit-together="true"
          {{ block.shopify_attributes }}
        >
          {%-
            render 'collapsible-row',
            heading: block.settings.heading,
            page_content: block.settings.page-content,
            description: block.settings.description,
            unique_id: unique_id,
            remove_assets: true
          -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
{%- endif -%}

<style>
  .collapsible-rows--block button {
    color: {{ text_color }};
    background-color: {{ bg_color }};
  }
</style>

{% schema %}
  {
    "name": "Collapsible rows",
    "settings": [
      {
        "id": "background-color",
        "label": "Background color",
        "type": "color",
        "default": "#f07855"
      },
      {
        "id": "text-color",
        "label": "Text Color",
        "type": "color",
        "default": "#ffffff"
      },
      {
        "label": "Heading",
        "id": "heading",
        "type": "text",
        "default": "Collapsible rows"
      },
      {
        "label": "Position title",
        "id": "title-alignment",
        "type": "radio",
        "options": [
          { "value": "left", "label": "Left" },
          { "value": "center", "label": "Center" }
        ],
        "default": "left"
      },
      {
        "id": "container-width",
        "label": "Maximum width of container",
        "type": "range",
        "min": 1,
        "max": 5,
        "step": 1,
        "default": 4
      },
      {
        "id": "spacing-above",
        "label": "Spacing above",
        "type": "checkbox",
        "default": true
      },
      {
        "id": "spacing-below",
        "label": "Spacing below",
        "type": "checkbox",
        "default": true
      }
    ],
    "blocks": [
      {
        "type": "collapsible-row",
        "name": "Collapsible row",
        "settings": [
          {
            "id": "heading",
            "label": "Heading",
            "type": "text",
            "default": "Collapsible row"
          },
          {
            "type": "richtext",
            "id": "description",
            "label": "Text",
            "default": "<p>Use rows to highlight unique features, <br/>sizing information, <br/>or other sales information.</p>",
            "info": "You can use product metafields to assign content to this row that is unique to an individual product. Learn more aboutÂ [metafields](https://help.shopify.com/en/manual/metafields/displaying-metafields-on-your-online-store)."
          },
          {
            "type": "page",
            "id": "page-content",
            "label": "Row content from page"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Collapsible rows",
        "blocks": [
          {
            "type": "collapsible-row"
          },
          {
            "type": "collapsible-row"
          },
          {
            "type": "collapsible-row"
          }
        ]
      }
    ]
  }
{% endschema %}