/* Product Tags on Gridwalls */
@media only screen and (max-width: 767px) {
  .product--root[data-label-shape=round] .product--label {
    padding: 0 6px;
    border-radius: 5px;
  }
  .product--label-container[data-item] {
    font-size: 8px;
  }
}

[data-item=nav-text--sub] {
  text-transform: none;
}

.stamped-badge-starrating .stamped-fa {
  color: var(--color--body) !important;
}
.header--right-side .offe-custom-popup--open a {
  height: 100%;
  display: flex;
  align-items: center;
  padding: 0 16px;
}
.product-rating--stars::before {
  -webkit-text-fill-color: var(--color--body);
  font-size: 12px;
}
.product--root[data-label-color] .product--label.alt-tag {
  background-color: var(--offe-custom-product-tag-alt-background-color);
  color: var(--offe-custom-product-tag-alt-text-color);
}
.header--container a:hover {
  color: var(--offe-custom-nav-hover-color);
}

[data-item~=section-heading],
.font--featured-heading,
[data-item~=featured-heading],
h1,
h2,
h3,
h4,
h5,
h6 {
  font-family: var(--font--heading--family);
}

a:hover,
.footer--root a:hover {
  color: var(--offe-custom-nav-hover-color);
}

a:hover .product--price-wrapper {
  color: var(--color--body) !important;
}

a:hover .stamped-product-reviews-badge {
  color: var(--color--body) !important;
}

a:hover .product--quick-add {
  color: var(--color--body) !important;
}

a:hover .product--ellipses {
  color: var(--color--body) !important;
}
.product--price-wrapper {
  flex-direction: column;
}

@media only screen and (min-width: 1024px) {
  .product--root[data-product-view=slider][data-text-alignment=left] .product--details {
    flex-direction: row;
    justify-content: space-between;
  }
}
/* .product--price[data-item] {
    padding: 0;
